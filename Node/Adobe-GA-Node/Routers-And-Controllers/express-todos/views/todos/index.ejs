<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <body>
        <h1>Todos</h1>
        <ul>
            <% todos.forEach(function(t) { %>
                <li>
                    <a href="/todos/<%= t.id %>"><%= t.todo %></a>
                    - 
                <%= t.done ? 'done' : 'not done' %>
                </li>
            <% }); %>
        </ul>
    </body>
</body>
</html>